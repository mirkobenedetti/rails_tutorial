<style>
th, td {
  padding: 10px;
}
th {
  text-align: left;
}
</style>

<h1>All Articles</h1>

<% if !@articles.empty? %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Body</th>
      <th>Url</th>
      <th>Delete</th>
      <th>Update</th>
    </tr>
  </thead>
  <tbody>
  <% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.author %></td>
    <td><%= article.body[0..20] %>...</td>
    <td>
    <% if !article.url.empty? %>
      <a href="http://<%= article.url %>">Visit Url</a>
    <% else %>
      Void Field
    <% end %>
    </td>
    <td><a href="/article/delete/<%= article.id %>">Delete</a></td>
    <td><a href="/article/update/<%= article.id %>">Update</a></td>
  </tr>
  <% end %>
  </tbody>
</table>
<% else %>
  <p>No article found.</p>
<% end %>

<br/>
<a href="/article/create">Create New</a>
